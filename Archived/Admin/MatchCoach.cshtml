@using Microsoft.AspNetCore.Mvc.ModelBinding
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Collections
@model AnyoneForTennis.Models.Schedules

<div class="container">
    <h1 class="text-center mb-5">Match Coaches</h1>

    <form asp-action="MatchCoach" method="post">
        <div class="form-group">
            <label for="id1">Select Schedule:</label>
            @Html.DropDownListFor(schedules => schedules.id1, (List<SelectListItem>)ViewData["ScheduleIds"], "Select an option", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="id2">Select Coach:</label>
            @Html.DropDownListFor(schedules => schedules.id2, (List<SelectListItem>)ViewData["CoachIds"], "Select an option", new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-lg btn-primary btn-block">Match Coach</button>
    </form>

    <div class="mt-5 text-center">
        <a asp-action="Index" class="btn btn-lg btn-secondary">Back</a>
    </div>
</div>