@using Microsoft.AspNetCore.Identity
@model IEnumerable<ApplicationUser>

@{
	ViewData["Title"] = "Members";
}

<h1>Coaches</h1>

<table class="table">
	<thead>
		<tr>
			<th>@Html.DisplayNameFor(model => model.FirstName)</th>
			<th>@Html.DisplayNameFor(model => model.LastName)</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var coach in Model)
		{
			<tr>
				<td>@Html.DisplayFor(item => coach.FirstName)</td>
				<td>@Html.DisplayFor(item => coach.LastName)</td>
				<td>
					@if (User.Identity.IsAuthenticated)
					{
						if (User.IsInRole("Admin"))
						{
							<a asp-action="Edit" asp-route-id="@coach.Id">Edit</a>
							<span>|</span>
							<a asp-action = "Details" asp-route-id="@coach.Id">Details</a>
							<span>|</span>
							<a asp-action = "Delete" asp-route-id="@coach.Id">Delete</a>
						}
						else
						{
							<a asp-action="Details" asp-route-id="@coach.Id">Details</a>
						}
					}
					else
					{
						<a asp-action="Details" asp-route-id="@coach.Id">Details</a>
					}
				</td>
			</tr>
		}
	</tbody>
</table>