@model TennisCourtMembershipSoft.Models.Admin
@{
    ViewData["Title"] = "Log in";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>
<h6 class="text-center"><strong>@TempData["Message"]</strong></h6>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-route="Login" method="post">
            <h4 class="text-center mb-4">Log in with your account</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input asp-for="Email" class="form-control form-control-lg rounded-pill shadow-sm" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash">Password:</label>
                <input type="password" asp-for="PasswordHash" class="form-control form-control-lg rounded-pill shadow-sm" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input asp-for="RememberMe" class="custom-control-input" />
                    <label class="custom-control-label" asp-for="RememberMe">Remember me</label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary btn-block rounded-pill shadow-sm">Log in</button>
            </div>
        </form>
        <div class="mt-3 text-center">
            <p>
                <a asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]" class="btn btn-lg btn-secondary rounded-pill shadow-sm">Don't have an account? Register here</a>
            </p>
        </div>
    </div>
</div>
