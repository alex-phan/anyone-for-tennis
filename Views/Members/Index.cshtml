@using Microsoft.AspNetCore.Identity
@model IEnumerable<ApplicationUser>

@{
	ViewData["Title"] = "Members";
}

<h1>Members</h1>

<table class="table">
	<thead>
		<tr>
			<th>@Html.DisplayNameFor(model => model.Id)</th>
			<th>@Html.DisplayNameFor(model => model.FirstName)</th>
			<th>@Html.DisplayNameFor(model => model.LastName)</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var member in Model)
		{
			<tr>
				<td>@Html.DisplayFor(item => member.Id)</td>
				<td>@Html.DisplayFor(item => member.FirstName)</td>
				<td>@Html.DisplayFor(item => member.LastName)</td>
				<td>
					<a asp-action="Edit" asp-route-id="@member.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@member.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@member.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>