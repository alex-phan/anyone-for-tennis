@model IEnumerable<TennisCourtMembershipSoft.Models.Schedules>

<div class="container">
    <h1 class="text-center mb-5">View Memberships</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Event Name</th>
                    <th>Coach Name</th>
                    <th>Member Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var schedule in Model)
                {
                    <tr>
                        <td>@schedule.EventName</td>
                        <td>@schedule.Coach.FirstName @schedule.Coach.LastName</td>
                        <td>@schedule.Member.FirstName @schedule.Member.LastName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-5 text-center">
        <a asp-action="Index" class="btn btn-lg btn-secondary rounded-pill shadow-sm">Back</a>
    </div>
</div>